package o1.auctionhouse

class FixedPriceSale(val description: String, val price: Int, duration: Int) {
  
  private var isBuyable:Boolean = duration > 0
  private var daysLeft = duration
  
  private def checkSaleExpiration = {
    this.isBuyable = this.duration > 0
  }
  
  def advanceOneDay = {
    this.daysLeft = this.daysLeft - 1
    this.checkSaleExpiration
  }
  
  def buy(buyer: String)
  
  def buyer: Option[String] = None
  
  // def daysLeft = this.duration
  
}